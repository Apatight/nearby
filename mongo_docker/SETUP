// go into mongo in docker
docker-compose exec mongodb mongo

// TO GET INTO MONGO
mongo mongodb://54.193.2.78:27017/ -u devadmin -p devadmin --authenticationDatabase "admin"

// SEED admin
mongoimport --uri mongodb://devadmin:devadmin@54.193.2.78:27017/admin --jsonArray --collection restaurants --file /Users/oliverhan/dev/system-design-capstone/nearby/dataList.json --numInsertionWorkers 16

// SEED ACTUAL
mongoimport --uri mongodb://devadmin:devadmin@54.193.2.78:27017/apateez-nearby --jsonArray --collection restaurants --file /Users/oliverhan/dev/system-design-capstone/nearby/dataList.json --numInsertionWorkers 16

// CREATE ADMIN USER
db.createUser(
  {
    user: "devadmin",
    pwd: "devadmin",
    roles : ["readWriteAnyDatabase","dbAdminAnyDatabase","clusterAdmin"]
  }
)
